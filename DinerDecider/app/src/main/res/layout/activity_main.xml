<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chines"
            android:id="@+id/fudtxtv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/changa_one" android:textSize="25sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/logoimgv"
            app:layout_constraintHorizontal_bias="0.5"
    />
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/logoimgv" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:contentDescription="TODO"/>
    <Button
            android:text="@string/decide"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:id="@+id/decidebtn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#4C7E92" android:textColor="#FDFDFB" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:layout_width="280sp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/afetxt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.503" app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/add_new_food" android:fontFamily="@font/changa_one"
            android:importantForAutofill="no"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/afbtn"/>
    <Button
            android:text="@string/Add_New_Food"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:id="@+id/afbtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#4C7E92" android:textColor="#FDFDFB" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/decidebtn"/>

</android.support.constraint.ConstraintLayout>